<h1>All posts</h1>
<div class="posts__wrapper">
  <% @posts.each do |post| %>
    <%= link_to post_url(post), class: "posts__card" do %>
      <div class="card__title-wrapper">
        <div class="card__title">
          <%= post.title %>
        </div>
        <div class="card__author">
          <%= post.user_id %>
        </div>
      </div>
      <div class="card__body">
        <%= post.message %>
      </div>
    <% end %>
  <% end %>
  <% if @posts.empty? %>
    <%= Empty %>
  <% end %>
</div>